<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cinema.MainActivity"
    android:background="#ffffff">

    <android.support.constraint.Guideline
        android:id="@+id/midGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent="0.5"
        />
    <android.support.constraint.Guideline
        android:id="@+id/topGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.1"
        />
    <TextView
        android:text="小叮当"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/topGuideLine"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/calendar"
        android:src="@drawable/calendar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/topGuideLine"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#000"
        app:layout_constraintTop_toBottomOf="@+id/topGuideLine"
        />
    <com.example.cinema.ViewPagerIndicator
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/viewPager"
        app:layout_constraintBottom_toBottomOf="@+id/viewPager"
        app:layout_constraintStart_toStartOf="@id/viewPager"
        app:layout_constraintEnd_toEndOf="@id/viewPager"
        app:layout_constraintVertical_bias="0.95"
        />

    <ImageView
        android:id="@+id/support"
        android:background="@color/colorBase"
        android:layout_width="6dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/viewPager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/film1"
        />
    <TextView
        android:text="本周上映"
        android:textSize="16sp"
        android:textColor="@color/colorBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/support"
        app:layout_constraintTop_toBottomOf="@id/viewPager"
        app:layout_constraintBottom_toTopOf="@id/film1"
        android:layout_marginLeft="3dp"
        />

    <ImageView
        android:id="@+id/film2"
        android:src="@drawable/film21"
        android:layout_width="90dp"
        android:layout_height="135dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewPager"
        app:layout_constraintBottom_toBottomOf="@id/bottomLine"
        app:layout_constraintVertical_bias="0.4"
        />
    <ImageView
        android:id="@+id/film1"
        android:src="@drawable/film11"
        android:layout_width="90dp"
        android:layout_height="135dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/film2"
        app:layout_constraintTop_toBottomOf="@id/viewPager"
        app:layout_constraintBottom_toBottomOf="@id/bottomLine"
        app:layout_constraintVertical_bias="0.4"
        />
    <ImageView
        android:id="@+id/film3"
        android:src="@drawable/film31"
        android:layout_width="90dp"
        android:layout_height="135dp"
        app:layout_constraintStart_toEndOf="@id/film2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewPager"
        app:layout_constraintBottom_toBottomOf="@id/bottomLine"
        app:layout_constraintVertical_bias="0.4"
        />
    <TextView
        android:id="@+id/film2Text"
        android:text="正义联盟"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/film2"
        />
    <TextView
        android:id="@+id/film1Text"
        android:text="雷神3：诸神黄昏"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/film1"
        app:layout_constraintEnd_toEndOf="@id/film1"
        app:layout_constraintTop_toBottomOf="@id/film1"
        />
    <TextView
        android:id="@+id/film3Text"
        android:text="东方快车谋杀案"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/film3"
        app:layout_constraintEnd_toEndOf="@id/film3"
        app:layout_constraintTop_toBottomOf="@+id/film3"
        />

    <ImageView
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="52dp"
        android:src="#f6f6f6"
        />
    <Button
        android:id="@+id/find"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/find1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomLine"
        app:layout_constraintEnd_toStartOf="@id/midGuideLine"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintHorizontal_bias="0.3"/>
    <Button
        android:id="@+id/recommend"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/recommend1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.3"
        />
    <Button
        android:id="@+id/mine"
        android:background="@drawable/mine1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/midGuideLine"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintTop_toBottomOf="@+id/bottomLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.3"
        />
    <TextView
        android:id="@+id/findText"
        android:text="发现"
        android:textSize="12sp"
        android:textColor="#a7a7a7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/midGuideLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/find"
        app:layout_constraintHorizontal_bias="0.3"
        />
    <TextView
        android:id="@+id/recommendText"
        android:text="本周上映"
        android:textSize="12sp"
        android:textColor="#a7a7a7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recommend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/mineText"
        android:text="我的"
        android:textSize="12sp"
        android:textColor="#a7a7a7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mine"
        app:layout_constraintStart_toStartOf="@id/midGuideLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        >
        <ImageView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/loading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <ImageView
            android:id="@+id/loadingCircle1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/loading_circle"
            app:layout_constraintTop_toTopOf="@id/loadingCircle2"
            app:layout_constraintBottom_toBottomOf="@id/loadingCircle2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.45"
            />
        <ImageView
            android:id="@+id/loadingCircle2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/loading_circle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.75"
            />
        <ImageView
            android:id="@+id/loadingCircle3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/loading_circle"
            app:layout_constraintTop_toTopOf="@id/loadingCircle2"
            app:layout_constraintBottom_toBottomOf="@id/loadingCircle2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.55"
            />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
