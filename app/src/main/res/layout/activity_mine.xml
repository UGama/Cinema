<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">
    <android.support.constraint.Guideline
        android:id="@+id/midGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent="0.5"
        />
    <android.support.constraint.Guideline
        android:id="@+id/topGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.07"
        />
    <TextView
        android:text="我的"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/topGuideLine"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/setting"
        android:src="@drawable/setting"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/topGuideLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        />
    <ImageView
        android:id="@+id/support0"
        android:background="#f6f6f6"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topGuideLine"
        />
    <android.support.constraint.Guideline
        android:id="@+id/topGuideLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.3"
        />
    <ImageView
        android:id="@+id/headShot"
        android:src="@drawable/headshot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/support0"
        app:layout_constraintBottom_toTopOf="@id/support1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        />
    <TextView
        android:id="@+id/userName"
        android:text="UGama"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/headShot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topGuideLine"
        app:layout_constraintBottom_toBottomOf="@id/topGuideLine2"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintVertical_bias="0.2"
        />
    <TextView
        android:id="@+id/lv"
        android:text="LV1"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/userName"
        app:layout_constraintTop_toBottomOf="@id/userName"
        app:layout_constraintBottom_toBottomOf="@id/topGuideLine2"
        app:layout_constraintVertical_bias="0.02"
        />
    <TextView
        android:id="@+id/followingNum"
        android:text="0"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/userName"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        app:layout_constraintBottom_toBottomOf="@id/topGuideLine2"
        app:layout_constraintVertical_bias="0.3"
        />
    <TextView
        android:id="@+id/following"
        android:text="关注"
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/followingNum"
        app:layout_constraintBottom_toBottomOf="@id/topGuideLine2"
        app:layout_constraintStart_toStartOf="@id/userName"
        app:layout_constraintVertical_bias="0.2"
        />
    <TextView
        android:id="@+id/followersNum"
        android:text="0"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/followers"
        app:layout_constraintTop_toTopOf="@id/followingNum"
        app:layout_constraintBottom_toBottomOf="@id/followingNum"
        />
    <TextView
        android:id="@+id/followers"
        android:text="被关注"
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/following"
        android:layout_marginLeft="36dp"
        app:layout_constraintTop_toTopOf="@id/following"
        app:layout_constraintBottom_toBottomOf="@id/following"
        />
    <TextView
        android:id="@+id/likeNum"
        android:text="0"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/like"
        app:layout_constraintTop_toTopOf="@id/followingNum"
        app:layout_constraintBottom_toBottomOf="@id/followingNum"
        />
    <TextView
        android:id="@+id/like"
        android:text="被点赞"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/followers"
        android:layout_marginLeft="36dp"
        app:layout_constraintTop_toTopOf="@id/following"
        app:layout_constraintBottom_toBottomOf="@id/following"
        />

    <ImageView
        android:id="@+id/support1"
        android:background="#f6f6f6"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topGuideLine2"
        />
    <ImageView
        android:id="@+id/support2"
        android:background="#f6f6f6"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topGuideLine2"
        android:layout_marginTop="100dp"
        />
    <Button
        android:id="@+id/topic"
        android:background="@drawable/topic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/support1"
        app:layout_constraintBottom_toTopOf="@+id/support2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/midGuideLine"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.25"
        />
    <Button
        android:id="@+id/message"
        android:background="@drawable/message"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/support1"
        app:layout_constraintBottom_toTopOf="@id/support2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/midGuideLine"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.8"
        />
    <Button
        android:id="@+id/article"
        android:background="@drawable/article"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/support1"
        app:layout_constraintBottom_toTopOf="@id/support2"
        app:layout_constraintStart_toStartOf="@id/midGuideLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.2"
        />
    <Button
        android:id="@+id/order"
        android:background="@drawable/order"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/support1"
        app:layout_constraintBottom_toTopOf="@id/support2"
        app:layout_constraintStart_toStartOf="@id/midGuideLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.75"
        />
    <TextView
        android:text="话题"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/topic"
        app:layout_constraintEnd_toEndOf="@id/topic"
        app:layout_constraintTop_toBottomOf="@id/topic"
        app:layout_constraintBottom_toTopOf="@id/support2"
        />
    <TextView
        android:text="消息"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/message"
        app:layout_constraintEnd_toEndOf="@id/message"
        app:layout_constraintTop_toBottomOf="@id/message"
        app:layout_constraintBottom_toTopOf="@id/support2"
        />
    <TextView
        android:text="文章"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/article"
        app:layout_constraintEnd_toEndOf="@id/article"
        app:layout_constraintTop_toBottomOf="@id/article"
        app:layout_constraintBottom_toTopOf="@id/support2"
        />
    <TextView
        android:text="订单"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/order"
        app:layout_constraintEnd_toEndOf="@id/order"
        app:layout_constraintTop_toBottomOf="@id/order"
        app:layout_constraintBottom_toTopOf="@id/support2"
        />

    <TextView
        android:text="我想看的影单"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/support2"
        app:layout_constraintBottom_toBottomOf="@id/bottomLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.05"
        />
    <Button
        android:id="@+id/plus"
        android:background="@drawable/plus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/support2"
        app:layout_constraintBottom_toBottomOf="@id/bottomLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintVertical_bias="0.05"
        />
    <ImageView
        android:background="@drawable/userlistexample"
        android:layout_width="120dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@id/plus"
        app:layout_constraintBottom_toBottomOf="@id/bottomLine"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        />

    <ImageView
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:src="#f6f6f6"
        />
    <Button
        android:id="@+id/find"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/find1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomLine"
        app:layout_constraintEnd_toStartOf="@id/midGuideLine"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.3"/>
    <Button
        android:id="@+id/recommend"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/recommend1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"
        />
    <Button
        android:id="@+id/mine"
        android:background="@drawable/mine1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/midGuideLine"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintTop_toBottomOf="@+id/bottomLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"
        />
    <TextView
        android:id="@+id/findText"
        android:text="发现"
        android:textSize="12sp"
        android:textColor="#a7a7a7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/midGuideLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/find"
        app:layout_constraintHorizontal_bias="0.3"
        />
    <TextView
        android:id="@+id/recommendText"
        android:text="本周上映"
        android:textSize="12sp"
        android:textColor="#a7a7a7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recommend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/mineText"
        android:text="我的"
        android:textSize="12sp"
        android:textColor="#a7a7a7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mine"
        app:layout_constraintStart_toStartOf="@id/midGuideLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        />

</android.support.constraint.ConstraintLayout>